<% if session[:browse_category_id].nil? %>
    <%= render :partial => 'lessons/scrollable_lessons' %>
<% end %>

<%= browse_category_navigation %>
<div class="clear append-0 span-29" id="lesson_tabs">
  <div id="lessons_tabs">
    <ul>
      <li><%= link_to h(t('lesson.most_popular')), tabbed_lessons_path(:collection => 'most_popular') %></li>
      <li><%= link_to h(t('lesson.highest_rated')), tabbed_lessons_path(:collection => 'highest_rated') %></li>
      <li><%= link_to h(t('lesson.newest')), tabbed_lessons_path(:collection => 'newest') %></li>
    </ul>
    <div style="display:block"></div>
  </div>
</div>

<div class="span-11 last">
  <div id="user_accordion_container">
    <div id="user_accordion">
      <h3><a href="#"><%= h(t('lesson.lessons_you_own')) %></a></h3>

      <div class="content">
        <%= render :partial => "lessons/owned", :locals => { :lesson_format => :brief } %>
      </div>

      <% if current_user.verified_instructor? %>
          <h3><a href="#"><%= t 'lesson.lessons_you_instructed' %></a></h3>

          <div class="content">
            <%= render :partial => "lessons/instructed", :locals => { :lesson_format => :brief } %>
          </div>
      <% end %>

      <h3><a href="#"><%= h(t('lesson.wishlist')) %></a></h3>

      <div class="content">
        <%= render :partial => "lessons/wishlist", :locals => { :lesson_format => :brief } %>
      </div>

      <h3><a href="#"><%= h(t('lesson.recently_browsed')) %></a></h3>

      <div class="content">
        <%= render :partial => "lessons/recently_browsed", :locals => { :lesson_format => :brief } %>
      </div>
    </div>
  </div>

  <div class="tag_cloud prepend-top">
    <%= render :partial => "lessons/tag_cloud", :object => Lesson.tag_counts %>
  </div>
</div>
