<% content_for :head do -%>
  <%= javascript_include_tag 'jquery-ui-1.7.2.custom.min.js' %>
  <%= stylesheet_link_tag 'jquery-ui/smoothness/jquery-ui-1.7.2.custom', :media => "screen, projection" %>
  <%= javascript_include_tag 'tabs.js' %>
<% end %>

<div class="span-40 last">
  <h3>Recognized User Homepage</h3>  <!-- This is a tmp header -->
</div>
<div class="clear append-1 span-30 last" id="lesson_tabs">
  <div id="tabs">
    <ul>
      <li><a href="#tabs-1"><%= t 'lesson.most_popular' %></a></li>
      <li><a href="#tabs-2"><%= t 'lesson.highest_rated' %></a></li>
      <li><a href="#tabs-3"><%= t 'lesson.newest' %></a></li>
      <li><a href="#tabs-4"><%= t 'lesson.lessons_you_own' %></a></li>
      <li><a href="#tabs-5"><%= t 'lesson.wishlist' %></a></li>
      <li><a href="#tabs-6"><%= t 'lesson.recently_browsed' %></a></li>
    </ul>

    <div id="tabs-1"><%= render :partial => "lessons/most_popular", :locals => { :lesson_format => :wide } %></div>
    <div id="tabs-2"><%= render :partial => "lessons/highest_rated", :locals => { :lesson_format => :wide } %></div>
    <div id="tabs-3"><%= render :partial => "lessons/newest", :locals => { :lesson_format => :wide } %></div>
    <div id="tabs-4"><%= render :partial => "lessons/owned", :locals => { :lesson_format => :wide } %></div>
    <div id="tabs-5">Wishlist placeholder<%#= render :partial => "lessons/wishlist", :locals => { :lesson_format => :wide } %></div>
    <div id="tabs-6"><%= render :partial => "lessons/recently_browsed", :locals => { :lesson_format => :wide } %></div>
  </div>
</div>

<%= render :partial => "lessons/tag_cloud", :object => Lesson.tag_counts %>

