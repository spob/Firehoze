<% title "Sign In" -%>

<% content_for :footer do -%>
  <%= javascript_include_tag 'validation/login.validate.js' -%>
<% end -%>

<div class="fh-form">
  <% form_for @user_session, :url => user_session_url(:protocol => SECURE_PROTOCOL), :html => {'accept-charset' => "utf-8", :id => "inline", :class => "login" } do |f| %>
      <%= f.error_messages %>
      <ul id="signin-info" class="section">
        <li class="header">
          <span></span>

          <h3>Sign In</h3>
          <h4>Sign in to your <%= t('general.company') %> account to be able to purchase and view your <%= t('general.lessons').downcase %>, communicate with other
            <%= t('general.company') %> users, and create <%= t('general.lessons').downcase %> of your own.</h4>
          <h4><strong>Don't have an account yet?
            <%= link_to "Create one for free", new_registration_path %></strong></h4>
          <div class="key"><%= image_tag("forms/asterisk.png", :alt => :required) %>: required</div>
        </li>
        <li>
        <span>
          <%= f.label :login, :Username %>
          <%= f.text_field :login, :title => "You must provide your username", :class => "required" %>
          <span class="required-field"></span>
        </span>
        </li>
        <li>
        <span>
          <%= f.label :password %>
          <%= f.password_field :password, :title => "You must provide your password", :class => "required" %>
          <span class="required-field"></span>
        </span>
        </li>
        <li>
        <span>
        <%= f.check_box :remember_me %>
        Remember Me
        </span>
        </li>
        <li class="bottom">
        <span class="unlabelled">
          <%= f.submit "Login" %>
          <%= link_to "Forgot username or password?", new_password_reset_path %>
        </span>

          <div class="clear" />
        </li>
      </ul>
  <% end %>
</div>
