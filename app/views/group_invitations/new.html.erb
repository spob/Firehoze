<% title "Invite a User to a Group" -%>
<%= javascript 'v2/validation/group_invitation.validate.js' %>

<div class="fh-form">
  <% form_for(:group_invitation, :url => group_invitations_path, :html => {'accept-charset' => "utf-8", :id => "inline", :class => "register" }) do |f| %>
      <%= f.error_messages %>
      <%= hidden_field_tag :id, @group.id %>
      <ul id="group-invitation-info" class="section">
        <li class="header">
          <span></span>

          <h3>Invite a User to Join "<%= @group.name %>"</h3>
          <h4>This group is a private group, which means membership is invitation only.</h4>
        </li>
        <li>
        <span>
          <%= f.label :to_user, "Invitee Username" %>
          <%= f.text_field :to_user %>
          <span class="field-separator">&mdash;or&mdash;</span>
          <%= f.label :to_user, "Invitee Email Address" %>
          <%= f.text_field :to_user_email, :class => "email" %>
        </span>
        </li>
        <li>
        <span>
          <%= f.label :message %>
          <%= f.text_area :message %>
        </span>
        </li>
        <li class="bottom">
        <span class="unlabelled">
        <%= f.submit "Invite" %>
          <%= link_to "Cancel", group_path(@group) %>
        </span>

          <div class="clear" />
        </li>
      </ul>
  <% end %>
</div>