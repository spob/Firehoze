<H1>Flag Inappropriate Content</H1>


<% form_for :flag, :url => flags_url(@flag, :flagger_type => @flag.flaggable.class.to_s, :flagger_id =>@flag.flaggable.id) do |f| %>
    <%= f.error_messages %>
    <p>
      <b><%= @flag.flaggable.class.to_s %></b>:
      <%= link_to h(@flag.friendly_flagger_name), flaggable_show_path(@flag) %>
      <% unless @flag.flaggable.class == User %>
          by <%= link_to_profile(offending_user) %>
      <% end %>
    </p>
    <p>
      <b>Reason</b>: <%= f.select(:reason_type, reason_select_list, :prompt => "Please choose...") %>
    </p>
    <p>
      <%= f.label :comments %>:
      <%= f.text_area :comments %>
      <br/>
      (Format using *<b>bold</b>* and _<i>italics</i>_ text)
    </p>
    <p>
      <%= f.submit "Submit", :disable_with => translate('general.disable_with') %>
      <%= link_to "Cancel", flaggable_show_path(@flag) %>
    </p>
<% end %>