<h3>Payment #<%= @payment.id %></h3>
<p>Paid to:</p>
<b><%= @payment.user.full_name %></b>
<br/>
<%= user_formatted_address(@payment.user, "<BR/>") %>
<br/>
<br/>

<table>
  <tr>
    <th>
      Date
    </th>
    <th>
      Item
    </th>
    <th>
      Description
    </th>
    <th>
      Credit
    </th>
    <th>
      Debit
    </th>
  </tr>
  <%= render :partial => 'credit', :collection => @payment.credits.descend_by_price %>
  <tr>
    <td>
      <%= l @payment.created_at %>
    </td>
    <td>
      Payment #<%= @payment.id %>
    </td>
    <td>
      
    </td>
    <td>

    </td>
    <td>
       <%= number_to_currency(@payment.amount * -1) %>
    </td>
  </tr>
</table>