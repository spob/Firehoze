<% pane = params[:pane] if params[:pane] %>
<% groups = @groups if pane == "groups" %>

<div id="<%= pane %>">
  <% paginated_section  groups, :params => { :pane => pane } do %>
    <table>
      <tr>
        <th colspan="2">Group</th>
        <th>Relationship</th>
        <th>Category</th>
      </tr>
      <% if groups.empty? %>
        <tr>
          <td colspan="4">You do not belong to any groups</td>
        </tr>
      <% else %>
        <%= render :partial => 'categories/group', :collection => groups %>
      <% end %>
    </table>
  <% end %>
</div>
