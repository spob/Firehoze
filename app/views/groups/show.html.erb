<% title "Group #{h @group.name}" -%>
<% @current = 'groups' %>

<%= render :partial => "categories/v2/breadcrumbs", :object => @group.category, :locals => { :mode => "groups" } %>

<% # group details -%>
<div class="span-12 append-bottom">
  <div id="group-container">
    <div id="group-logo"><%= logo_tag @group, :size => :medium %></div>
    <div id="description">
      <h3>Group <%= h @group.name %></h3>
      <ul>
        <li><%= link_to_profile(@group.owner) %>&mdash;Owner</li>
        <li class="description"><%= h @group.description %>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</li>
      </ul>
      <hr />
      <div class="actions clearfix">
        <%= show_join_link(@group)  %>
        <%= show_leave_link(@group) %>
        <%= show_invite_link(@group) %>
        <%= show_edit_link(@group) %>
        <%= flag_link @group unless @group.private-%>
        <div id="status">
          <ul>
            <li><%= image_tag 'icons/16-check.png' %> This group is <%= @group.private ? "by invitation only" : "open to the public" %></li>
            <% content_tag :li  do -%>
              <%= image_tag 'icons/16-check.png' %>
              <%= show_membership_text @group %>
            <% end if current_user -%>
          </ul>
        </div>
      </div>
      <hr />
      <% unless @group.active %>
        <div class="notice">
          <p>This group is inactive because of inappropriate content. Please address this concern and notify the system administration if you think this group is ready to be re-activated.</p>
          <% if current_user.try(:is_moderator?) %>
            <%= link_to('Reactivate?', activate_group_path(@group.id), html_options = {:method => :post, :confirm => 'Are you sure?', :class => rounded } )%>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% # group content tab -%>
<div class="span-8">
  <div id="group-details-tabs" class="tab-container">
    <ul class="tabs">
      <li><a href="#lessons">Lessons</a></li>
      <li><a href="#discussion">Discussion</a></li>
      <li><a href="#members">Members</a></li>
    </ul>
    <div class="panes clearfix">
      <div id="tabs-lessons">
        <% if @lessons.present? %>
          <%= render :partial => "lessons/v2/lesson_tns", :object => @lessons, :locals => { :per_row => 3 } %>
        <% else %>
          Looks like no one has added lessons to this group yet.
        <% end %>
      </div>
      <div id="tabs-discussion-topics">
        <div id="new-topic-link"><%= link_to "Post New Topic", new_group_topic_path(@group), :class => :rounded %></div>
        <%= render :partial => 'topics/topics', :object => @topics %>
      </div>
      <div id="tabs-members">
        <%= render :partial => 'users/v2/users_mosaic', :object => @members %>
      </div>
    </div>
  </div>
</div>

<!-- recent group activity -->
<div class="span-4 last">
  <div class="widget-box">
    <div class="widget-box-header banner">
      <span class="h4">Recent Group Activity</span>
      <%= image_tag("general/spinners/ajax-loader_small_spinner.gif", :class => "loader") %>
    </div>
    <%= render :partial => 'activities/activities', :object => @activities %>
  </div>
</div>
