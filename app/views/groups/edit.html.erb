<% title "Edit Group" -%>

<h3>Edit Group</h3>

<% form_for(:group, :url => group_path(@group), :html => { :method => :put, :multipart => true }) do |f| %>
    <%= f.error_messages %>

    <%= f.label :name %>:
    <%= f.text_field :name %><br />
    <br/>
    <%= f.check_box :private %>This group is by invitation only
    <br/>
    <br/>
    <%= f.label :description %>:
    <%= f.text_area :description %><br />
    <br/>
    <%= f.label :category %>
    <%= f.collection_select(:category_id, Category.ascend_by_compiled_sort, :id,
                            :formatted_name,  {:include_blank => 'Select...'}) %>
    <br/>
    <p>
      <%= logo_tag @group, :size => :medium %>
      <% if @group.logo? %>
          <%= link_to('Delete current', clear_logo_group_path(@group.id), html_options = {:method => :post, :confirm => 'Are you sure?'} ) %>
      <% end %>
    </p>
    <div>
      <%= f.label :logo %>
      <%= f.file_field :logo, :class => "required" %>
    </div>
    <%= f.submit "Save", :disable_with => translate('general.disable_with') %>
    <%= link_to 'Cancel', group_path(@group) %>
<% end %>