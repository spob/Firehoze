<%= javascript 'always_at_bottom', 'footer' %>
<h3>Shopping Cart</h3>
<table id="line_items">
  <tr>
    <th>Item</th>
    <th class="price">Unit Price</th>
    <th>Qty</th>
    <th class="price">Extended Price</th>
    <th>Discount</th>
    <th class="price">Price</th>
    <th/>
  </tr>
  <%= render_partial :partial => 'line_item', :collection => @cart.line_items %>
  <% for line_item in @cart.line_items %>
  <% end %>
  <tr>
    <td align="right" colspan="3"><strong>Total</strong></td>
    <td class="total price"><%= number_to_currency @cart.total_full_price %></td>
    <td class="total price"><%= number_to_currency @cart.total_full_price - @cart.total_discounted_price %></td>
    <td class="total price"><%= number_to_currency @cart.total_discounted_price %></td>
    <td></td>
  </tr>
</table>

<p>
  <%= link_to "Continue Shopping", store_path(1) %> |
  <%= link_to "Checkout", new_order_path %>
</p>