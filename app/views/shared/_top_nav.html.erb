<ul id="top_nav_links">
  <li><%= signin_or_signout_link %></li>
  <% if current_user %>
      <%= content_tag(:li, "#{link_to "Admin Console", admin_consoles_path}") if current_user.is_admin? or current_user.is_paymentmgr? or current_user.is_moderator? %>
      <li><%= link_to_unless_current "Account Settings", edit_account_path(current_user) %></li>
      <!-- pass a dummy id to the following route since restful for show requires an id -->
      <li><%= link_to "Buy Credits", store_path(0) %></li>
      <li><%= "Available Credits (#{current_user.credits.available.count})" %></li>
      <% if current_user and !current_user.gift_certificates.active.empty? %>
          <li><%= link_to "Gift Certificates (#{current_user.gift_certificates.active.count})", gift_certificates_path %></li>
      <% end %>
      <li><%= link_to "Shopping Cart", cart_path(@current_cart) if show_cart? %></li>
  <% end %>
</ul>

<% form_tag search_lessons_path, :method => :get do %>
    <%= text_field_tag :search_lesson_criteria, params[:search_lesson_criteria] %>
    <%= submit_tag "Search", :name => nil %>
<% end %>