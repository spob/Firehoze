<%= content_tag(:h3, "Discussion for Lesson: #{ link_to @lesson.title, lesson_path(@lesson) }")  unless @style == 'tab' %>

<%= render @lesson_comments %>

<% if @style == 'tab'%>
  <%= link_to pluralize(1, 'Comment'), lesson_lesson_comments_path(@lesson) %>
<% else %>
  <%= link_to "Back to Lesson", lesson_path(@lesson) %> | <%= link_to("Write a Comment", new_lesson_lesson_comment_path(@lesson)) if @lesson.owned_by? current_user %>
<% end %>