New Comment for Lesson <%= @lesson.title %>

<% form_for :lesson_comment, :url => lesson_lesson_comments_url(@lesson) do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :body %> <br/>
      <%= f.text_area :body %>
    </p>
    <p><%= f.submit "Submit", :disable_with => translate('general.disable_with') %></p>
<% end %>


<p><%= link_to "Cancel", lesson_reviews_path(@lesson) %></p>
