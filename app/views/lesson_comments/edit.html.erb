Edit Comment for Lesson <%= @lesson_comment.lesson.title %>

<% form_for :lesson_comment, :url => lesson_comment_path(@lesson_comment), :html => { :method => :put } do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :body %> <br/>
      <%= f.text_area :body %>
    </p>
    <% if @lesson_comment.can_edit? current_user %>
        <p>
          <%= f.label :public %> <br/>
          <%= f.check_box :public %>
        </p>
    <% end %>
    <p><%= f.submit "Submit", :disable_with => translate('general.disable_with') %></p>
<% end %>


<p><%= link_to "Cancel", lesson_lesson_comments_path(@lesson_comment.lesson) %></p>
