<%
lesson_comment = object

   if lesson_comment.class == LessonComment
       path = edit_lesson_comment_path(lesson_comment)
   else
       path = edit_topic_comment_path(lesson_comment) 
   end
%>

<% if current_user and lesson_comment.can_edit? current_user %>
  <div><%= link_to "Edit", path %></div>
<% end %>

<% unless lesson_comment.status == COMMENT_STATUS_ACTIVE %>
  <div>Status: <%= lesson_comment.status %></div>
<% end %>
<div><%= flag_link lesson_comment %></div>
