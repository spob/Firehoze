<% content_for :head do -%>
    <%= javascript_include_tag 'swfobject'  %>
<% end %>

<p>
  <b>Title:</b>
  <%= h @video.title %>
</p>

<p>
  <b>Description:</b>
  <%= h @video.description %>
</p>

<p>
  <b>Author:</b>
  <%= h @video.author.login %>
</p>

<p>
  <b>Created:</b>
  <%= format_date_time @video.created_at %>
</p>
<div id="player">
  You need to
  have <%= link_to 'Flash Player', 'http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash' %>
  installed to display this video
</div>

