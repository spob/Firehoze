<% 
lesson = object
%>
<% if lesson.owned_by?(current_user) or lesson.instructed_by?(current_user) %>
  <%= player({:image => lesson.thumbnail_url ? h(lesson.sized_thumbnail_url(:large)) : "videos/video_placeholder.jpg", :streamer => "rtmp://e1f1.simplecdn.net/play", :file => h(lesson.full_processed_video.try("output_rtmp_path")), :skin => 'bluemetal', :autostart => false}, {:width => PLAYER_WIDTH, :height => PLAYER_HEIGHT }) %>
<% else %>
  <%= player({:image => lesson.thumbnail_url ? h(lesson.sized_thumbnail_url(:large)) : "videos/video_placeholder.jpg", :streamer => "rtmp://e1f1.simplecdn.net/play", :file => h(lesson.preview_processed_video.try("output_rtmp_path")), :skin => 'bluemetal', :logo => 'http://amazonassets.simplecdn.net/images/videos/preview_logo.gif'}, {:width => PLAYER_WIDTH, :height => PLAYER_HEIGHT}) %>
<% end %>