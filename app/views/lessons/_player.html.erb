<% 
lesson = object
%>
<% if lesson.owned_by?(current_user) or lesson.instructed_by?(current_user) %>
  <%= player({:image => lesson.thumbnail_url ? lesson.sized_thumbnail_url(:large) : "videos/video_placeholder.jpg", :streamer => "rtmp://e1f1.simplecdn.net/play", :file => lesson.full_processed_video.try("output_rtmp_path"), :skin => 'bluemetal', :autostart => false}, {:width => 540, :height => 400}) %>
<% else %>
  <%= player({:image => lesson.thumbnail_url ? lesson.sized_thumbnail_url(:large) : "videos/video_placeholder.jpg", :streamer => "rtmp://e1f1.simplecdn.net/play", :file => lesson.preview_processed_video.try("output_rtmp_path"), :skin => 'bluemetal', :logo => 'http://assets.firehoze.com.s3.amazonaws.com/PreviewLogo.gif'}, {:width => 540, :height => 400}) %>
<% end %>