<% title "#{h @lesson.title}" -%>
<% @current = 'lessons' %>

<%= javascript 'swfobject' %>

<div id="lesson-show">
  <div id="title-container">
    <div id="title">
      <h3>
        <% if category = @lesson.category %>
          <% AncestorCategory.category_id_equals(category.id).descend_by_generation(:select => [:ancestor_name]).each do |cat| %>
            <%= link_to(cat.ancestor_name, (category_path(cat.ancestor_category).downcase)) %>  /
          <% end %>
          <%= link_to(category.name, (category_path(category).downcase)) %> /
        <% end %>
        <%= h @lesson.title -%>
      </h3>
      <span id="author">by <%= link_to_profile(@instructor) -%></span>
      <div id="rating-container">
        <div id="rating">
          <div id="stars">
            <%= lesson_rating_for(@lesson, current_user) -%>
          </div>
          <div id="stats">
            Average Rating:
            <span id="<%= dom_id(@lesson) -%>_average" class="average"><%= current_average(@lesson) -%></span>
            (<span id="<%= dom_id(@lesson) -%>_count"><%= vote_counts_phrase(@lesson) -%></span>)
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="lesson-container">
    <% # lesson player -%>
    <div id="lesson-player">
      <div><%= render :partial => 'lessons/player', :object => @lesson -%></div>
    </div>

    <% # lesson detail -%>
    <div id="lesson-detail">
      <div id="lesson-details-tabs" class="tab-container lesson-details">
        <ul class="tabs">
          <li><a href="#synopsis">Summary</a></li>
          <li><a href="#detail">Details</a></li>
          <li><a href="#instructor">Instructor</a></li>
        </ul>
        <div class="panes">
          <div id="tab-lesson-summary">
            <div id="lesson-synopsis">
              <%= h(@lesson.synopsis) -%>
