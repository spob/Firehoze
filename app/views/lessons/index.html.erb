<% content_for :head do -%>
  <%= javascript_include_tag 'jquery-ui-1.7.2.custom.min.js' %>
  <%= stylesheet_link_tag 'jquery-ui/smoothness/jquery-ui-1.7.2.custom', :media => "screen, projection" %>
  <%= javascript_include_tag 'tabs.js' %>
<% end %>

<%#= render :partial => "default" if current_user and current_user.is_admin? %>

<div class="clear span-40 last" id="lesson_tabs">
  <div id="tabs">
    <ul>
      <li><a href="#tabs-1"><%= t 'lesson.most_popular' %></a></li>
      <li><a href="#tabs-2"><%= t 'lesson.highest_rated' %></a></li>
      <li><a href="#tabs-3"><%= t 'lesson.newest' %></a></li>
    </ul>
    <div id="tabs-1"><%= render :partial => "most_popular", :locals => { :lesson_format => :wide } %></div>
    <div id="tabs-2"><%= render :partial => "highest_rated", :locals => { :lesson_format => :wide } %></div>
    <div id="tabs-3"><%= render :partial => "newest", :locals => { :lesson_format => :wide } %></div>
  </div>
</div>
<%= render :partial => "tag_cloud", :object => Lesson.tag_counts if current_user %>

