  <% groups = current_user.nil? ? [] : current_user.moderated_groups(:select => [:id, :name]) %>
  <% if groups.present? %>
  <div class="box-header">Add/Remove Group</div>
  <div class="box-content">
    <ul class="group-lists">
      <% groups.each do |group| %>
        <li><%= link_to_add_remove_group lesson, group %></li>
      <% end %>
    </ul>
  </div>
<% end %>