<h1>Edit Lesson</h1>

<% form_for(:lesson, :url => lesson_path(@lesson), :html => { :method => :put }) do |f| %>
    <%= f.error_messages %>

    <%= f.label :title %>:
    <%= f.text_field :title %><br />
    <br/>
    <%= f.label :synopsis %>:
    <%= f.text_area :synopsis %><br />
    <br/>
    <%= f.label :notes %>:
    <%= f.text_area :notes %><br />
    <br/>
    <%= f.label :tags %>:
    <%= f.text_field :tag_list %><br />
    <br/>
    <%= f.label :language %>:
    <%= f.select :language, User.supported_languages %><br/>
    <br/>

    <%= f.submit "Update", :disable_with => translate('general.disable_with') %>
    <%= link_to "Cancel", lesson_path(@lesson) %>
<% end %>
