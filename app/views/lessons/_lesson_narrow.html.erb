<% lesson = object %>
<div class="span-6 lesson_left">  this is the tn pane</div>

<div class="span-16 lesson_center"> 
  <%= link_to lesson.title, lesson_path(lesson) %> <%= link_to_profile(lesson.instructor) %> <%= l lesson.created_at %>
  <div><%= lesson.rating_average %></div>
  <div>Owned?: <%= (current_user ? current_user.owns_lesson?(lesson) : false) %></div>
  <div>Number of Viewers: <%= lesson.credits_count %></div>
  <% if current_user.try("is_admin?") or lesson.instructed_by?(current_user) %>
    <div>
      <%= t("lesson.#{lesson.status}") %>
      <%= link_to  'Edit', edit_lesson_path(lesson) %>
    </div>
  <% end %>
</div>

<div class="span-6 last lesson_right"> this is lesson right</div>

