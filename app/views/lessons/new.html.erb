<h1>Create Lesson</h1>

<% form_for(:lesson, :url => lessons_path, :html => { :multipart => true}) do |f| %>
    <%= f.error_messages %>
    
    <%= f.label :title %>:
    <%= f.text_field :title %><br />
    <br/>
    <%= f.label :description %>:
    <%= f.text_area :description %><br />
    <br/>
    <%= f.label :video %>
    <%= f.file_field :video %>
    <br/>
    <%= f.submit "Create lesson" %>
    <%= link_to "Cancel", lessons_path %>
<% end %>