<%= stylesheet 'tables' %>

<h3>Lessons</h3>
<table>
  <tr>
    <th>Title</th>
    <th>Instructor</th>
    <th>Created At</th>
    <% if current_user.try("is_admin?") %>
      <th>State</th>
    <% end %>
    <th>Average Rating</th>
    <th>Owned?</th>
    <th>Action</th>
  </tr>
  <%= render @lessons %>
</table>

<%= will_paginate @lessons %>
<br/>
Rows to Display Per Page: <%= per_page_select(list_admin_lessons_path) %>