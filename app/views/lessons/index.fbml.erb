<% @user = User.for_facebook_session(facebook_session.user.to_i, facebook_session) %>
<% if @user %>
    Hey there <%= @user.try(:email) %>
<% else %>
    Welcome to Firehoze. <%= link_to "Sign up for a Firehoze account", new_registration_path %>.
<% end %>

<div id="grant-permissions">
  <fb:prompt-permission perms="offline_access" next_fbjs="$('#grant-permissions').hide()">
    <h2>Click here to allow Firehoze to post to your Facebook page.</h2>
  </fb:prompt-permission>
</div>