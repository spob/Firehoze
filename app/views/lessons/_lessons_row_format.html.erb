<% lessons = object %>

<div>
  <% lessons.each do |lesson| %>
  <div class="lesson-row clearfix">
    <div style="width:90px; float:left">
      <div><%= img_tag_lesson_tn(lesson, :small, :size => "100x67") %></div>
    </div>
    <div style="width:90px; float:right">
      <div><%= link_to avatar_tag(lesson.instructor, :size => :smaller), user_path(lesson.instructor), :title => privacy_sensitive_username(lesson.instructor) %></div>
      <div><%= link_to_profile(lesson.instructor, :length => 22) %></div>
    </div>
    <div style="margin:0 120px 0 120px;">
      <%= ratings_for(lesson, :static ) %>
      <span class="headline h5"><strong><%= lesson.category.name -%>: <%= link_to h(lesson.title), lesson_path(lesson), :class => :lesson_title_link %></strong> <%= content_tag(:span, "(#{owned_it_phrase(lesson, current_user)})" ) unless owned_it_phrase(lesson, current_user).blank? %></span><br />
      <span class="timestamp">&mdash;created on <%= l lesson.created_at %></span>
      <div class="synopsis"><%= h lesson.synopsis %></div>
      <div><%= render :partial => "lessons/tags", :object => lesson %></div>
    </div>
  </div>
  <% end %>
</div>
