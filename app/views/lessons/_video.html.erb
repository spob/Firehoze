<% # used in the lesson#show stats tab %>
<tr class="<%= cycle("even", "odd") -%>">
  <td>
    <%= video.class.to_s %>
  </td>
  <td>
    <%=h t("lesson.#{video.status}") %>
  </td>
  <% if current_user.try("is_an_admin?") %>
    <td>
      <%=h(number_to_human_size(video.video_file_size)) %>
    </td>
    <td>
      <% if video.video_width and video.video_height then %>
        <%= video.video_width %> x <%= video.video_height %>
      <% end %>
    </td>
    <td>
      <%= h video.video_file_name %> (<%= video.id %>)
    </td>
    <td>
      <%= h video.video_content_type %>
    </td>
    <!--<td>-->
    <!--<%= l(video.conversion_started_at) if video.conversion_started_at %>-->
    <!--</td>-->
    <!--<td>-->
    <!--<%= l(video.conversion_ended_at) if video.conversion_ended_at %>-->
    <!--</td>-->
    <!--<td>-->
    <!--<%= video.flixcloud_job_id %>-->
    <!--</td>-->
    <td>
      <% if video.is_a? ProcessedVideo then %>
        <%= number_to_currency(video.input_video_cost/100000.0,
          :precision => 3) unless video.input_video_cost.blank? %> /
        <%= number_to_currency(video.processed_video_cost/100000.0,
          :precision => 3) unless video.input_video_cost.blank? %>
      <% end %>
    </td>
    <td><ul><%= render video.video_status_changes %></ul></td>
    <td><%= convert_button(video) %></td>
  <% end %>
</tr>