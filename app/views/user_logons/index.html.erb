<% title "User Logons" -%>
<% @current = 'logons' %>

<h3>User Logons</h3>
<div class="span-12 last search-box-container">
  <% form_for(@search, :html => { :class => "search-box clearfix" }) do |f| %>
    <div class="span-6 right">
      <%= f.label :user_login_like, "Username" %>
      <%= f.text_field :user_login_like, :style => "width:370px;" %>
    </div>
    <div class="span-6 center last">
      <%= f.label :user_email_like, "Email" %>
      <%= f.text_field :user_email_like, :style => "width:330px;" %>
      <%= f.submit "Search" %>
    </div>
  <% end %>
</div>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Email</th>
    <th>Login IP</th>
    <th>Logged In At</th>
  </tr>
  <%= render @user_logons %>
</table>
<%= will_paginate @user_logons %>
<br />
Rows to Display Per Page: <%= per_page_select(user_logons_path) %>
