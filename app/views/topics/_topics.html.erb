<% if @topics.present? %>
<table class="topic">
  <tr>
    <th colspan="2">Topics</th>
    <th class="center">Comments</th>
    <th>Last Post</th>
  </tr>
  <%= render topics %>
  <%= will_paginate topics %>
</table>
<% else %>
<p>Got a question or want to share your thoughts? Post a topic and get a conversation started ...</p>
<% end %>