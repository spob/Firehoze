<% pane = params[:pane] if params[:pane] %>
<% reviews = @reviews if pane == "reviews" %>

<div id="<%= pane %>">
  <% if reviews.empty? %>
    <div class="info">You haven't reviewed any <%= t('general.lessons').downcase %> yet.</div>
  <% else %>
    <%= will_paginate reviews, :params => { :pane => pane }, :class => "ajax-pagination" %>
    <%= render :partial => "reviews/review", :collection => reviews %>
  <% end %>
</div>
