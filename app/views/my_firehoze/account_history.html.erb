<% title "my firehoze" -%>
<% @current = 'my_firehoze' %>

<div id="my_firehoze" class="span-12 last">
  <% # TOP LEVEL NAVIGATION -%>
  <%= render :partial => 'nav' %>
  <% # ACCOUNT HISTORY -%>
  <div class="span-12 last">
    <h4 class="banner">Account History</h4>
  </div>

  <div id="account_history" class="span-12 last">
    <div class="sub-navigation">
      <ul class="buttons">
        <li><a href="#" class="button">Orders<span class="top_left"></span><span class="bottom_left"></span></a></li>
        <li class="last">
          <a href="#" class="button">Credits<span class="top_right"></span><span class="bottom_right"></span></a></li>
      </ul>
      <div class="clear"></div>
    </div>

    <div class="sub-navigation-panes">
      <% # ORDER HISTORY -%>
      <div>
        <%= render :partial => "orders/v2/orders", :locals => { :orders => @orders, :pane => :orders } %>
      </div>

      <% # CREDIT HISTORY -%>
      <div>
        <div class="secondary-sub-navigation">
          <ul class="links">
            <li><a href="#">Available</a></li>
            <li><a href="#">Used</a></li>
            <li><a href="#">Expired</a></li>
          </ul>
          <div class="clear"></div>

          <div class="secondary-sub-navigation-panes">
            <div class="compact_container">
              Available credits are available to use to purchase videos.
              <%= render :partial => "credit_history",
                :locals => { :user => current_user, :credits => @available_credits, :show_redeemed => false, :show_expired => false } %>
              <div class="clear"></div>
            </div>
            <div>
              Used credits are credits that you have used to purchase videos.
              <%= render :partial => "credit_history",
                :locals => { :user => current_user, :credits => @used_credits, :show_redeemed => true, :show_expired => false } %>
              <div class="clear"></div>
            </div>
            <div>
              Credits expire if they are unused and you have not logged in for one year.
              <%= render :partial => "credit_history",
                :locals => { :user => current_user, :credits => @expired_credits, :show_redeemed => false, :show_expired => true } %>
              <div class="clear"></div>
            </div>
          </div><!-- end (interior) panes -->
        </div>
      </div>
    </div>
  </div>
</div>
