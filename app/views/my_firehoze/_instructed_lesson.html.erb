<tr>
  <td>
    <%= h instructed_lesson.title %>
  </td>
  <td>
    <%= h instructed_lesson.category.name %>
  </td>
  <td>
    <span id="<%= dom_id(instructed_lesson) -%>_average" class="average"><%= current_average(instructed_lesson) -%></span>
    (<span id="<%= dom_id(instructed_lesson) -%>_count"><%= vote_counts_phrase(instructed_lesson) -%></span>)
  </td>
  <td>
    <%= l(instructed_lesson.created_at) %>
  </td>
  <td>
    <%= instructed_lesson.credits.size %>
  </td>
  <td>
    <%= number_to_currency(instructed_lesson.credits.sum(:price)) %>
  </td>
</tr>