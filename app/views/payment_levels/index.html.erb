<% title "Payment Levels" -%>
<% @current = 'payment_levels' %>

<h3>Payment Levels</h3>
<p><%= link_to content_tag(:span, 'New Payment Level'), new_payment_level_path, :class => :minibutton %></p>
<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Payment Rate</th>
    <th>Default</th>
    <th>Admin Only</th>
    <th>Action</th>
  </tr>

  <%= render :partial => @payment_levels %>

</table>
<%= will_paginate @payment_levels %>

<p class="mt-1em">Rows to Display Per Page: <%= per_page_select(payment_levels_path) %></p>
