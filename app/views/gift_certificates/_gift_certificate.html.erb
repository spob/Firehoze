<tr>
  <td>
    <%= gift_certificate.formatted_code %>
  </td>
    <% if current_user.try('is_admin?') %>
        <td><%= gift_certificate.user.login %></td>
    <% end %>
  <td>
    <%= gift_certificate.credit_quantity %>
  </td>
  <td>
    <%= l(gift_certificate.expires_at) if gift_certificate.expires_at %>
  </td>
  <td>
    <%= h gift_certificate.comments %>
  </td>
  <td>
    <%= link_to("Redeem",
                redeem_gift_certificate_url(gift_certificate, :protocol => SECURE_PROTOCOL),
                html_options = {:method => :post} ) %> |
    <%= link_to("Give",
                pregive_gift_certificate_path(gift_certificate) ) %>
  </td>
</tr>