<% form_for(:user, :url => password_path(@user), :html => { :method => :put }) do |f| %>
  <%= admin_edit_hidden_field_tag %>
  <%= f.error_messages %>
  <fieldset>
    <legend>Change Password</legend>
    <%= f.error_messages %>
    <% unless @current_user.is_admin? %>
    <p>
      <%= f.label :current_password, "Current password" %><br />
      <%= f.password_field :current_password %>
    </p>
    <% end %>
  
    <p>
      <%= f.label :password, f.object.nil? ? nil : "Change password" %><br />
      <%= f.password_field :password %><br />
    </p>
    <p>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </p>
  </fieldset>
  <p>
    <%= f.submit "Update", :disable_with => translate('general.disable_with') %>
  </p>
<% end -%>
