<div class="fh-form">
  <% form_for(:user, :url => user_path(@user), :html => { :method => :put, :id => "profile" }) do |f| %>
      <%= f.error_messages %>
      <ul id="profile-info" class="section">
        <li class="header">
          <span></span>

          <h3>Edit <%= link_to_profile @user %>'s Profile</h3>
          <h4>Edit a user's account information.</h4>
        </li>
        <li>
        <span class="unlabelled">
          <%= f.check_box :active %> Active
        </span>
        </li>
        <li>
        <span>
          <%= f.label :login, "Username" %>
          <%= f.text_field :login, :maxlength => "25", :title => "You must enter a username", :class => "required" %>
          <span class="required-field"></span>
        </span>
          <div class="counter"><span id="user_login_counter"></span> characters left</div>
        </li>
        <li>
        <span>
          <%= f.label :email %>
          <%= f.text_field :email, :maxlength => "100", :title => "You must enter a valid email address", :class => "required email" %>
          <span class="required-field"></span>
        </span>
          <div class="counter"><span id="user_email_counter"></span> characters left</div>
        </li>
        <li>
        <span>
          <%= f.label :first_name %>
          <%= f.text_field :first_name, :maxlength => "40" %>
        </span>
          <div class="counter"><span id="user_first_name_counter"></span> characters left</div>
        </li>
        <li>
        <span>
          <%= f.label :last_name %>
          <%= f.text_field :last_name, :maxlength => "40", :title => "You must enter a last name", :class => "required" %>
          <span class="required-field"></span>
        </span>
          <div class="counter"><span id="user_last_name_counter"></span> characters left</div>
        </li>
        <li>
        <span>
          <%= f.label :bio %>
          <%= f.text_area :bio %>
        </span>
          <span class="help">(Format using *<b>bold</b>* and _<i>italics</i>_ text)</span>
        </li>
        <li>
        <span class="unlabelled">
          <%= f.check_box :rejected_bio %> Rejected Bio
        </span>
        </li>
        <li>
        <span>
          <%= f.label :time_zone %>
          <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
          <span class="required-field"></span>
        </span>
        </li>
        <li>
        <span>
          <%= f.label :language %>
          <%= f.select :language, User.supported_languages %>
          <span class="required-field"></span>
        </span>
        </li>
        <li class="bottom">
        <span class="unlabelled">
        <%= f.submit "Update", :id => "update-profile" %>
        <%= link_to 'Cancel', home_path %>
        </span>

          <div class="clear" />
        </li>
      </ul>
  <% end %>
</div>