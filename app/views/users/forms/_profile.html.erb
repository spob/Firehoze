  <%= f.text_field :first_name %><br F/>
  <br/>
  <%= f.label :last_name %>:
  <%= f.text_field :last_name %><br />
  <br/>
  <%= f.label :bio %>:
  <%= f.text_area :bio %><br />
  <br/>
  <%= f.label :time_zone %>:
  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %><br/>
  <br/>
