<p>
  <%= avatar_tag @user, :size => :medium %>
</p>

<p>
  <b>Username:</b>
  <%= h @user.login %>
</p>

<p>
  <b>Email:</b>
  <%= h @user.email %>
</p>

<p>
  <b>First Name:</b>
  <%= h @user.first_name %>
</p>

<p>
  <b>Last Name:</b>
  <%= h @user.last_name %>
</p>

<p>
  <b>Bio:</b>
  <%= show_bio %>
</p>

<%= link_to "Flag", new_flag_path(:flagger_type => 'User', :flagger_id => @user) %>
<% if @user.can_edit? current_user %>
    | <%= link_to "Edit", edit_user_path(@user)  %>
<% end %>