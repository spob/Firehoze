<% form_for [ @registration, @user ] do |form| %>
    <%= form.error_messages %>

    Your email address has been confirmed. Please provide the following information to create your account:
    <br/><br/>
    <p>
      <b>Username:</b>
      <%= h @user.login %>
    </p>

    <p>
      <b>Email:</b>
      <%= h @user.email %>
    </p>


    <%= form.label :first_name %>:
    <%= form.text_field :first_name %><br />
    <br/>
    <%= form.label :last_name %>:
    <%= form.text_field :last_name %><br />
    <br/>
    <%= form.label :time_zone %>:
    <%= form.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
    <br/>
    <%= form.label :language %>:
    <%= form.select :language, User.supported_languages %>
    <br/>


    <%= form.label :password, form.object.nil? ? nil : "Change password" %>:
    <%= form.password_field :password %><br />
    <br/>
    <%= form.label :password_confirmation %>:
    <%= form.password_field :password_confirmation %><br />
    <br/>
    <%= form.submit "Register" %>
<% end %>