<p>
  <b>Username:</b>
  <%= h @user.login %>
</p>

<p>
  <b>Email:</b>
  <%= h @user.email %>
</p>

<p>
  <b>First Name:</b>
  <%= h @user.first_name %>
</p>

<p>
  <b>Last Name:</b>
  <%= h @user.last_name %>
</p>

<p>
    <b>Bio:</b>
    <%= rbs_formatter(@user.bio) %>
</p>

<p>
  <b>Time Zone:</b>
  <%= h @user.time_zone %>
</p>
<p>
  <b>Language:</b>
  <%= h language_value(@user.language) %>
</p>

<%= link_to 'Edit Account Settings', edit_account_path(@user) %>