<% title "editing #{@user.name_or_username}'s account" %>
<% @current = 'my_firehoze' %>

<%= javascript 'v2/validation/accounts.validate.js' %>

<h3><%= h(t('user.account_settings')) %></h3>
<div id="account-settings-tabs" class="tab-container">
  <ul class="tabs">
    <li><a href="#profile"><%= h(t('user.profile')) %></a></li>
    <li><a href="#password"><%= h(t('user.password')) %></a></li>
    <li><a href="#instructor"><%= h(t('user.author_info')) %></a></li>
    <li><a href="#avatar"><%= h(t('user.avatar')) %></a></li>
    <li><a href="#privacy"><%= h(t('user.privacy')) %></a></li>
  </ul>
  <div class="panes clearfix">
    <div id="tabs-1"><%= render :partial => "accounts/forms/profile" %></div>
    <div id="tabs-2"><%= render :partial => "accounts/forms/password" %></div>
    <div id="tabs-3"><%= render :partial => "accounts/forms/instructor" %></div>
    <div id="tabs-4"><%= render :partial => "accounts/forms/avatar" %></div>
    <div id="tabs-5"><%= render :partial => "accounts/forms/privacy" %></div>
  </div>
</div>
