<% form_for(:user, :url => update_privacy_account_path(@user), :html => { :method => :put, :id => "privacy" }) do |f| %>
    <%= f.error_messages %>

    <fieldset>
      <legend>Update Privacy Settings</legend>
      Show Real First and Last Name: <%= f.check_box :show_real_name, :class => :foobar %>
      (if you leave this unchecked, other users will only see your username)

      <p>
        Who can contact you via email?
        <%= f.radio_button :allow_contact, USER_ALLOW_CONTACT_NONE %>&nbsp;No one
        <%= f.radio_button :allow_contact, USER_ALLOW_CONTACT_ANYONE %>&nbsp;Anyone
        <%= f.radio_button :allow_contact, USER_ALLOW_CONTACT_STUDENTS_ONLY %>&nbsp;Only students have purchased at least one of your lessons
        <br/>
        Don't worry...even if you choose to allow other users to contact you via email, those users will not see your email address.
      </p>
    </fieldset>

    <p>
      <%= f.submit "Update", :disable_with => translate('general.disable_with') %>
      <%= link_to 'Cancel', home_path %>
    </p>
<% end %>