<h2>Add a Comment to the Topic "<%= h @topic_comment.topic.title %>"</h2>

<% form_for(:topic_comment, :url => topic_topic_comments_url(@topic), :html => { :class => "lesson_comment", :id => "topic_comment" }) do |f| %>
    <%= f.error_messages %>
      <p>
        <%= f.label :body, "Your comment" %><br/>
        <%= f.text_area :body, :style => "width:530px;", :class => "required" %>
        <br/>
        <span class="help">(Format using *<b>bold</b>* and _<i>italics</i>_ text)</span>
      </p>
      <% if @topic_comment.show_public_private_option?(current_user) %>
          <p>
            <%= f.label :public %> <%= f.check_box :public %>
          </p>
      <% end %>
    <p>
      <%= f.submit "Submit", :class => "submit" %>
      <%= link_to "Cancel", topic_path(@topic) %>
    </p>
<% end %>