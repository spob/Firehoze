<h3>Edit SKU</h3>

<% form_for(:sku, :url => sku_path(@sku), :html => { :method => :put }) do |f| %>
    <%= f.error_messages %>

    <%= f.label :sku %>:
    <%= f.text_field :sku %><br />
    <br/>
    <%= f.label :num_credits %>:
    <%= f.text_field :num_credits %><br />
    <br/>
    <%= f.label :price %>:
    <%= f.text_field :price %><br />
    <br/>
	<%= f.label :description %>:
    <%= f.text_field :description %><br />
    <br/>
    <%= f.submit "Update", :disable_with => translate('general.disable_with')%>
    <%= link_to "Cancel", skus_path %>
<% end %>
