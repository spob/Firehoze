<%= render :partial => "shared/infield_head_content" %>

<% form_for(:sku, :url => sku_path(@sku), :html => { :method => :put, :id => "sku" }) do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend>Edit Sku</legend>
    <p>SKU: <%= f.text_field :sku %></p>
    <p>Number of credits: <%= f.text_field :num_credits %></p>
    <p>Price: <%= f.text_field :price %></p>
    <p>Description:<%= f.text_field :description %></p>
  </fieldset>

  <div>
    <%= f.submit "Update", :disable_with => translate('general.disable_with')%>
    <%= link_to "Cancel", skus_path %>
  </div>
<% end %>
