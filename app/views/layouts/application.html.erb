    <%= stylesheet_link_tag 'blueprint/ie', :media => "screen, projection" %>
    <![endif]-->
  </head>
  <body>
    <div class="container">
      <div class="span-24 last" id="top_nav">
        <%= render "shared/top_nav" %>
      </div>

      <div class="clear span-24 last">
        <%= link_to  image_tag("firehoze_logo.jpg", :size => "240x100", :alt => 'Firehoze'), "/" %>
      </div>

      <div class="clear span-24 last main_nav" id="main_nav">
        <%= render "shared/main_nav" %>
      </div>

      <div class="clear span-24 last" id="main">Â 
        <p style="color: green"><%= flash[:notice] %></p>
        <p style="color: red"><%= flash[:error] %></p>
        <%= yield %>
      </div>

      <div class="clear span-24 last" id="footer"></div>

    </div>
  </body>
</html>