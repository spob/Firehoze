        <%#= yield -%>
      </div>
    </div><!-- container -->
  </div>
</div>

<div id="shadowbox-middle">
  <!-- <div id="shadowbox-middle-blue"></div> -->
  <div class="container"><!-- showgrid -->
    <div class="clear span-12 last">
      <%= yield -%>
    </div>
  </div>
  <!-- container -->
</div>
<!-- shadowbox-middle -->
<!-- end main_content -->

<div id="shadowbox-bottom"></div>

<%= render :partial => 'shared/footer' %>
<%= render "shared/google_analytics" -%>
<%= render "shared/get_satifisfaction" unless (controller.controller_name == "pages" and params[:id] == 'help_center') -%>
</body>
</html>
