<fb:fbml version="1.1">
  <%= stylesheet_link_tag "firehoze" %>

  <%= facebook_messages %>

  <br />
  <% fb_dashboard do %>
      <% if @fb_url %>
          <%= fb_action "Return to Firehoze", @fb_url %>
      <% end %>
  <% end %>

  <% fb_tabs do %>
      <%= fb_tab_item "Help &amp; Feedback", fb_about_url, :align => "right" %>
  <% end %>

  <%= yield %>
</fb:fbml>
