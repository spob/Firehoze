<tr>
  <td><%= discount.minimum_quantity %></td>
  <td><%= number_to_percentage(100 * discount.percent_discount, :precision => 1) %></td>
  <td><%= discount.active %></td>
  <td>
    <%= link_to "Edit", edit_discount_path(discount) %>
    <%= link_to "Delete", discount_path(discount), :method => :delete, :confirm => "Are you sure?" if discount.can_delete? %>
  </td>
</tr>