Edit Discount for SKU <%= h @discount.sku.sku %>

<% form_for :discount, :url => discount_path(@discount), :html => { :method => :put } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :minimum_quantity %><br />
    <%= f.text_field :minimum_quantity %>
  </p>
  <p>
    <%= f.label :percent_discount %> <br />
    <%= f.text_field :percent_discount %> (enter 0.05 for 5%)
  </p>
  <p>
    <%= f.label :active %> <br />
    <%= f.check_box :active %>
  </p>
  <p><%= f.submit "Submit", :disable_with => translate('general.disable_with') %></p>
<% end %>


<p><%= link_to "Cancel", sku_discounts_path(@discount.sku) %></p>
